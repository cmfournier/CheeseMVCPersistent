@model CheeseMVC.ViewModels.ViewMenuViewModel

@{
    ViewBag.Title = "MENU NAME";
}

<title>@Model.Menu.ID</title>
<h1>@Model.Menu.Name</h1>

@foreach (var CheeseMenu in Model.Items)
{
<ul>
    <li>@CheeseMenu.Cheese.Name</li>
</ul>
}

@if (Model.Items.Count == 0)
{
    <p>No items yet</p>
}

<p><a asp-controller="Menu" asp-action="AddItem" asp-route-id=@Model.Menu.ID> Add Item</a></p>